{
  "name": "laravel-trpc-workbench",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "cd .. && husky workbench/.husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@inertiajs/core": "^2.3.11",
    "@inertiajs/react": "^2.3.11",
    "@tanstack/react-query": "^5.90.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^18.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "happy-dom": "^20.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "nock": "^14.0.0",
    "prettier": "^3.4.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.22.0",
    "vitest": "^4.0.17"
  }
}
